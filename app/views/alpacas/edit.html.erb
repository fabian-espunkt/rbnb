<div class="container py-5 justify-content-center">
  <h1 class="text-center">Edit Alpaca profile</h1>

  <%= simple_form_for(@alpaca) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="row justify-content-center">
      <div class="form-inputs col-xl-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'Liliput', class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :age %>
          <%= f.text_field :age, placeholder: "4", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, placeholder: "123 Santa Claus Avenue, 18494 Finnland", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :color %>
          <%= f.text_field :color, placeholder: "gold", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :craziness_level, label: 'Craziness level (1 = relaxed, 2 = normal, 3 = crazy)' %>
          <%= f.text_field :craziness_level, placeholder: "3", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, label: 'Price per day (in €)' %>
          <%= f.text_field :price, placeholder: "25€", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, placeholder: "A white alpaca with soft fur and a great character. He's super moody and night-active.", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
        <div class="form-actions">
          <%= f.submit "Update profile", class: "btn btn-primary" %>
        </div>
      </div>
    </div>

  <% end %>
</div>

