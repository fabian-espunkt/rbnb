<!-- Show row of alpacas -->
<div class="container">
    <h1 class="text-center">Alpacas for every occasion</h1>
    <p id="container-p">Select from a wide variety of alpacas in your area. Wild ones, tame ones, crazy ones. We've got something for every taste and occasion.</p>
    <div class="cards-container">
        <% @alpacas.last(4).each do |r| %>
          <div class="card" width: 18rem;>
            <img src="<%= r.photo %>" class="card-img-top" class="d-flex justify-content-between">
            <div class="card-body">
              <h5 class="card-title"><%= r.name %></h5>
          </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Description: <br></strong> <%= r.description %></li>
              <li class="list-group-item"><strong>Price/day: </strong> <%= r.price %> â‚¬</li>
              <li class="list-group-item"><strong>Craziness Level: </strong><%= r.craziness_level %></li>
            </ul>
            <div class="card-body">
              <a href="#" class="card-link"><%= link_to "See more", alpaca_path(r) %></a>
            </div>
          </div>
        <% end %>
    </div>
</div>

